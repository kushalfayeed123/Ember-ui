  <p class='subtitle has-text-white my-2'>
        Archived: {{this.data.archived}}
      </p>
<button
        type='button'
        class='button is-pulled-left mt-4'
        {{on 'click' this.toggleArchive}}
      >
        {{#if this.data.archived}}
          Unarchive
        {{else}}
          Archive
        {{/if}}
      </button>